{
  "manifest_version": 3,
  "name": "Simple Page Refresher2",
  "version": "1.0",
  "description": "A simple Chrome extension to refresh the page.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "refresh.html"
  },
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "icons": {
    "16": "refresh.png",
    "32": "refresh.png",
    "48": "refresh.png",
    "128": "refresh.png"
  },
  "incognito": "spanning"
}
